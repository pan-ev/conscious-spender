<link rel="stylesheet" href="/css/login.css">

<header>
  <nav>
    <a href="/">
      <img src="/assets/logo-main.png" alt="" class="logo">
    </a>
    <a href="/login">
      <i class="fa-regular fa-user icon"></i>
    </a>
  </nav>
</header>


<section class="wrapper hero-section">
  <div class="title-section">
    <img src="/assets/spendrlogo.png" alt="">
    <h2>Welcome to Spendr</h2>
    <p>
      Your personal budget tracker that helps you take control of your spending and achieve your financial goals.
    </p>
  </div>
  <div class="button-group auth-buttons">
    <button class="btn login-btn">Login</button>
    <button class="btn btn-filled signup-btn">Sign Up</button>
  </div>
</section>

{{!-- Login Card --}}
<div class="row justify-space-between-md">
  <div class="login-card hidden auth-card">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
    <div class="divider">OR</div>
    <button class="btn btn-filled signup-btn">Sign Up</button>
  </div>

  {{!-- Signup Card --}}
  <div class="signup-card hidden auth-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" required />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" required />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" required />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
    <div class="divider">OR</div>
    <button class="btn btn-filled login-btn">Login</button>
  </div>
</div>

<script src="/js/login.js"></script>